@model AuctionDTOs.UserEditDTO

@using (Html.BeginForm("EditUser", "User", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @role = "form"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-group"> 
                <div class="col-md-2">
                </div>               
                <div class="col-md-10">
                    @if (Model.AvatarImage.Id > 0)
                    {                        
                        <img src="@Html.Raw(Url.Action("GetImg", "User", new { id = Model.AvatarImage.Id }))" width="100" height="100" class="img-thumbnail img-rounded"/>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AvatarImage, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <input type="file" id="picture" name="picture" accept="image/*"/> <p class="text-danger"> Only .jpeg, .jpg, .png and .gif formats are accepted. Max 4MB. 100 x 100 pixels work best.</p>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", @name = "address", @required = "required", @rows ="4" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @name = "emailAddress", @required = "required" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Update" />
                </div>
            </div>
        }
