@model IEnumerable<AuctionDTOs.ProductCategoryDTO>

@using (Html.BeginForm("AdvancedSearch", "Listing", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
{

    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search..." name="searchBox" value="@TempData["SearchString"]" />
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
            </span>
        </div>
    </div>
    <div class="form-group">
        <select class="form-control" name="category">
            <option selected disabled hidden>Choose category...</option>
            @foreach (var i in Model)
            {                
                <option value="@i.ProductCategoryName">@i.ProductCategoryName</option>
            }
       </select>
    </div>
}
